%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "AdminChurch"
      %meta{:content => content_for?(:description) ? yield(:description) : "AdminChurch", :name => "description"}
        = stylesheet_link_tag :application, :media => "all"
        = javascript_include_tag :application
        = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
        %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => "#"} Project name
        .nav-collapse.collapse
          %ul.nav
            %li.active
              %a{:href => "#"} Home
            %li
              %a{:href => "#about"} About
            %li
              %a{:href => "#contact"} Contact
                          
        %form.navbar-form.pull-right
          %input.span2{:placeholder => "Email", :type => "text"}
            %input.span2{:placeholder => "Password", :type => "password"}
              %button.btn{:type => "submit"} Sign in
      / /.nav-collapse
      %main{:role => "main"}
        .container
          .content
            .row
              .span12

                = yield